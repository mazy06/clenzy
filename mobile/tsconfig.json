{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/src/*"]
    },
    "types": ["react-native", "@types/react", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "App.tsx", "index.ts"],
  "exclude": ["node_modules"]
}
