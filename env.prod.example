# Configuration de production pour Clenzy
# ⚠️  IMPORTANT : Copier ce fichier vers .env.prod et modifier les valeurs !

# Configuration de la base de données
POSTGRES_PASSWORD=Cl3nzy_Pr0d_2024_S3cur3!
POSTGRES_DB=clenzy_prod
POSTGRES_USER=clenzy_prod_user

# Configuration Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=Cl3nzy_K3ycl0ak_2024!
KEYCLOAK_DB_PASSWORD=K3ycl0ak_DB_2024!
KEYCLOAK_HOSTNAME=keycloak.clenzy.fr

# Configuration du serveur
JWT_SECRET=Cl3nzy_JWT_S3cr3t_2024_V3ry_L0ng_And_S3cur3!
KEYCLOAK_CLIENT_SECRET=cl3nzy_b4ck3nd_s3cr3t_2024!

# Configuration du domaine
DOMAIN=clenzy.fr
API_URL=https://api.clenzy.fr

# Configuration des ports
POSTGRES_PORT=5432
KEYCLOAK_PORT=8443
SERVER_PORT=8080
CLIENT_PORT=80
NGINX_PORT=80
NGINX_SSL_PORT=443

# Configuration de sécurité
ENABLE_SSL=true
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true

# Configuration de monitoring
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=true
ENABLE_LOGGING=true

# Configuration email (Brevo SMTP)
MAIL_PROVIDER=brevo
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
BREVO_SMTP_USERNAME=your-brevo-login
BREVO_SMTP_KEY=your-brevo-smtp-key
MAIL_USERNAME=your-brevo-login
MAIL_PASSWORD=your-brevo-smtp-key
MAIL_FROM=info@clenzy.fr
MAIL_NOTIFICATION_TO=info@clenzy.fr
MAIL_SMTP_CONNECTION_TIMEOUT_MS=5000
MAIL_SMTP_TIMEOUT_MS=5000
MAIL_SMTP_WRITE_TIMEOUT_MS=5000
MAIL_SMTP_POOL_SIZE=20
MAIL_MAX_ATTACHMENTS=10
MAIL_MAX_ATTACHMENT_SIZE_BYTES=10485760

# Configuration reception emails (IMAP)
IMAP_ENABLED=true
IMAP_HOST=mail.clenzy.fr
IMAP_PORT=993
IMAP_USERNAME=info@clenzy.fr
IMAP_PASSWORD=your-imap-password

# Configuration de sauvegarde
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Tous les jours à 2h00
